#!/usr/bin/env bash
set -e

container_name="bb8"

if [[ ($# -gt 0) ]]; then
   if [ "$1" = "log" ] || [ "$1" = "status" ] ; then
    container_name="bb8_$(cat /dev/urandom | tr -cd 'a-f0-9' | head -c 32)"
   fi
fi

docker run \
    --rm \
    -v /var/run/docker.sock:/var/run/docker.sock \
    -v bb8_ssh:/bb8/etc/.ssh \
    -v bb8_logs:/bb8/logs \
    -v /etc/timezone:/etc/timezone:ro \
    --name $container_name \
    bb8 "$@"
